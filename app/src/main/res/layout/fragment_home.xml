<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.FragmentHome"
    android:orientation="vertical">

    <TextView
        android:layout_margin="@dimen/medio"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="@dimen/medio"
        android:text="@string/destacados"
        android:gravity="start"
        android:textColor="@color/colorPrimary"/>

    <TextView
        android:id="@+id/msgNotEvents"
        android:layout_margin="@dimen/medio"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="@dimen/msgNotEvents"
        android:text="@string/msgNotEvents"
        android:gravity="start"
        android:textColor="@color/gris"/>

    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:id="@+id/RecyclerDestacados"/>

</LinearLayout>